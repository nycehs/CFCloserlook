{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "height": "container",
  "autosize": {"type": "fit", "contains": "padding"},
  "layer":[
    {
    "data":{
    "url": "https://raw.githubusercontent.com/nycehs/NYC_geography/master/PUMA_or_Subborough.geo.json",
    "format": {"type": "topojson", "feature": "collection"}
    },
    "mark": {"type": "geoshape", "stroke": "#ffffff","fill":"lightgray"}
  },{
  "data": {
    "url": "https://raw.githubusercontent.com/nycehs/NYC_geography/master/PUMA_or_Subborough.topo.json",
    "format": {"type": "topojson", "feature": "collection"}
  },
  "transform": [
    {
      "lookup": "properties.PUMA",
      "from": {
        "data": {"url": "HOUSING_DATA.csv"},
        "key": "GEOCODE",
        "fields": [
          "GEOCODE",
          "brokenplaster-peeling-paint"
        ]
      },
      "default": "no data"
    }
  ],
  "selection": {
    "highlight": {"type": "single", "empty": "none", "on": "mouseover"}
  },
  "mark": {"type": "geoshape", "stroke": "#ffffff"},
  "encoding": {
    "color": {
      "bin": false,
      "field": "brokenplaster-peeling-paint",
      "type": "quantitative",
      "legend": {
        "title": "Broken plaster, peeling paint",
        "titleFontSize": 12,
        "orient":"top-left",
        "gradientLength": 100
    },
    "scale": {"scheme": {"name": "purplered", "extent": [0.01, 0.75]}}
    },
    "strokeWidth": {
      "condition": [{"selection": "highlight", "value": 2}],
      "value": 0.5
    },
    "tooltip": [
      {
        "field": "properties.GEONAME",
        "type": "nominal",
        "title": "Neighborhood"
      },
      {
        "field": "brokenplaster-peeling-paint",
        "type": "quantitative",
        "title": "Percent of homes with broken plaster or peeling paint"
      }
    ]
  }
}]
}